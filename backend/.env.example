# Database Configuration
DATABASE_URL=mssql+pyodbc://username:password@localhost:1433/SENTIMENT?driver=ODBC+Driver+17+for+SQL+Server

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Application
APP_NAME=connectsphere
APP_VERSION=1.0.0
DEBUG=True
API_V1_PREFIX=/api/v1

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:5500

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,mp4,mov